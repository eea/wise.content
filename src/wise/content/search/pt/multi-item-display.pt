<div
  tal:define="css_class view/css_class | string:"
  tal:attributes="class string:item-subform subform ${css_class};
  id view/form_name">

  <metal:block use-macro="context/@@ploneform-macros/fields" />

  <tal:block tal:condition="python: view.item ">
  <tal:block tal:condition="python: view.item_title(view.item)">
  <h3 tal:define="info python: view.item_title(view.item)">
    <!-- Record: -->
    <span tal:replace="python: info[0]">Class</span>
    <!-- # -->
    <!-- <span tal:replace="python: info[1]">10</span> -->
  </h3>
  </tal:block>
  </tal:block>

  <div tal:content="structure view/data_template | nothing"></div>
  <div tal:content="structure view/extras | nothing"></div>

  <tal:block tal:define="sections view/get_sections | nothing">

    <div id="tabs-wrapper" tal:condition="sections">
      <!-- Nav tabs -->

      <ul class="nav nav-tabs" id="tabs" role="tablist"  >

        <tal:block tal:repeat="section sections">

          <li class="nav-item" tal:condition="section/item">
            <a class="nav-link" tal:define="utitle section/title"
               tal:attributes="id python:utitle.replace(' ', '_').lower() + '-tab';
           href python:'#' + utitle.replace(' ', '_').lower();
           aria-controls python:utitle.replace(' ', '_').lower();
           title  section/title"
               data-toggle="tab"
               role="tab"
               aria-selected="true"
               tal:content="section/title">Section title here</a>
          </li>
        </tal:block>

      </ul>
      <!-- Tab panes -->
      <div class="tab-content" id="tabContents" >
        <tal:loop repeat="section sections">
          <div class="tab-pane fade"
               tal:condition="section/item"
               tal:define="utitle section/title"
               tal:attributes="id python:utitle.replace(' ', '_').lower()"
               role="tabpanel"
               tal:content="structure section"
          >...</div>
        </tal:loop>
      </div>
    </div>
  </tal:block>


  <div id="prev-next-row" tal:define="actions view/actions; next actions/next | nothing; prev actions/prev | nothing">

    <div>
      <span style="width: 32%; display: inline-block; height: 40px;">
        <!--<input type="submit" tal:replace="structure prev" tal:condition="prev" />-->

        <div tal:condition="prev" id="form-buttons-prev-row" class="row">
          <div class="widget">
            <button type="submit" id="form-buttons-prev" name="form.buttons.prev" class="submit-widget button-field btn btn-default pagination-prev fa fa-angle-left" value=""
                                                                                                                                                                      >
            </button>
          </div>
        </div>

      </span>

      <span style="width: 35%; display: inline-block; height: 40px; text-align: center; position: absolute; ">
        <span style=" position: relative; height: 40px; top: 25%;" >
          Page <span tal:content="python: int(view.data.get('page', '0')) + 1">1</span> of <span tal:content="view/count"></span>
        </span>
      </span>

      <span style="width: 32%; display: inline-block; height: 40px;">
        <!--<input type="submit" tal:replace="structure next" tal:condition="next"/>-->
        <div tal:condition="next" id="form-buttons-next-row" class="row">
          <div class="widget">
            <button type="submit"
              id="form-buttons-next"
              name="form.buttons.next"
              class="submit-widget button-field btn btn-default fa fa-angle-right"
              value="">
            </button>
          </div>
        </div>
      </span>
    </div>

  </div>

  <tal:def define="subform view/subform | nothing">
  <div class="subform-level-x" tal:condition="subform">
    <div tal:content="structure subform">subform here</div>
  </div>
  </tal:def>
</div>
