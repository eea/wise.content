<div tal:define="data view/get_extra_data" class="extra-details">
    <tal:block tal:repeat="info data" >
        <tal:section define="section python: info[1]; section_title python: info[0]">
            <h4 tal:content="section_title">Section title</h4>

            <div class="tabs-wrapper" >
                <ul  class="nav nav-tabs" id="tabs2" role="tablist" tal:condition="python: len(info[1]) > 1" >
                    <tal:block tal:repeat="section_label section">
                        <li class="nav-item">

                            <a class="nav-link" tal:define="utitle python: section_label or section_title"
                               tal:attributes="id python:utitle.replace(' ', '_').replace('/','-').lower() + '-tab';
                                href python:'#' + utitle.replace(' ', '_').replace('/','-').lower();
                                aria-controls python:utitle.replace(' ', '_').lower()"
                               data-toggle="tab"
                               role="tab"
                               aria-selected="true" tal:content="utitle"

                            >Section title here</a>
                        </li>
                    </tal:block>
                </ul>

                <div tal:attributes="class string:tab-content;id string:tabContents2">
                    <tal:block tal:repeat="section_label section" tal:define="istab python: 'tab-pane fade' if( len(info[1]) > 1) else ''" >
                        <div
                             tal:define="utitle python:section_label or section_title;"
                             tal:attributes="id python: utitle.replace(' ', '_').replace('/','-').lower();
                             class string: ${istab}"
                             role="tabpanel"
                        >
                            <!--<h4 tal:content="string: $section_title: $section_label" tal:condition="python: section_label">SubSection Label</h4>-->
                            <tal:def define="section_data python:section[section_label]">
                            <table class="listing" tal:condition="section_data">
                                <thead>
                                    <tr tal:define="row_labels python:section_data[0].keys()">
                                        <th tal:repeat="l row_labels"
                                            tal:content="python:view.name_as_title(l)">Label</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr tal:repeat="row section_data" >
                                        <td tal:repeat="v row/values"
                                            tal:content="structure python: view.print_value(v)">Value</td>
                                    </tr>
                                </tbody>
                            </table>
                                <!-- <tal:cont replace="structure python: view.print_value(section_data)"></tal:cont> -->
                            </tal:def>
                        </div>

                    </tal:block>
                    <!-- tal:repeat : section -->

                </div>
                <!-- tabs-wrapper -->
            </div>

        </tal:section>
    </tal:block>
</div>